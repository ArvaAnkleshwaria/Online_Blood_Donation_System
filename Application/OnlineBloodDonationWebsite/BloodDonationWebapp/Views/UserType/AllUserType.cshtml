@model IEnumerable<BloodDonationWebapp.Models.UserTypeMV>

@{
    ViewBag.Title = "All User Type";
}

<div class="col-md-8">


    <div class="contact-form-block">

        <h2 class="contact-title">All User Types</h2>

        <p>
            @Html.ActionLink("New User Type", "Create", null, new { @class = "btn btn-theme" })
        </p>
        <table class="table table-hover">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UseType)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UseType)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserTypeID }, new { @class = "btn btn-primary" })
                        <!-- @Html.ActionLink("Details", "Details", new { id = item.UserTypeID },new {@class="btn btn-"}) -->
                        @Html.ActionLink("Delete", "Delete", new { id = item.UserTypeID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>>