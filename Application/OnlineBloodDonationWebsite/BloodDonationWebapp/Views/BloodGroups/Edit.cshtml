@model BloodDonationWebapp.Models.BloodGroupsMV

@{
    ViewBag.Title = "Blood Groups";
}

<div class="col-md-6">


    <div class="contact-form-block">

        <h2 class="contact-title">Edit Blood Group</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BloodGroup)

            <div class="form-group">
                @Html.LabelFor(model => model.BloodGroup, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BloodGroup, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BloodGroup, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                Enter Blood Group:
                @Html.EditorFor(model => model.BloodGroup, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BloodGroup, "", new { @class = "text-danger" })

            </div>


            <div class="form-group">

                <input type="submit" style="float:right" value="Update" class="btn btn-theme" />
                @Html.ActionLink("Back", "AllBloodGroups", null, new { @class = "btn btn-theme-invert" })

            </div>

        }
    </div>
</div>
